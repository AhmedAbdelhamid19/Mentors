@model ElMentors.Models.Account.ApplicationUser

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-lg p-4 text-center">
                <h2 class="mb-4">My Profile</h2>
                <img src="@(Model.PhotoPath ?? "/images/default-profile.png")" alt="Profile Photo" class="profile-pic mb-3" style="width:100px;height:100px;object-fit:cover;border-radius:50%;border:2px solid #007bff;" />
                <div class="mb-3">
                    <strong>Username:</strong> @Model.UserName
                </div>
                <div class="mb-3">
                    <strong>Email:</strong> @Model.Email
                </div>
                <div class="mb-3">
                    <strong>Phone:</strong> @Model.PhoneNumber
                </div>
                <a href="/Account/UploadPhoto" class="btn btn-outline-primary">Change Photo</a>
            </div>
        </div>
    </div>
</div> 