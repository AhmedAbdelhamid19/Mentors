@model List<Topic>

@{
	SelectList Dep = new SelectList(Model, "Id", "Name");
}

<a asp-action="ViewDependences" asp-route-TopicId="@ViewBag.TopicId" class="btn btn-success">
	Back to Dependence
</a>

<form asp-action="SaveDependences" method="post">
	<label class="form-label">Select a Dependent Topic</label>

	<select asp-items="Dep" name="depId" class="form form-control">
		<option value="0"> ---select Dependent---</option>
	</select>
	@if (ViewData.ModelState["DependentId"]?.Errors.Count > 0)
	{
		<span class="text-danger">@ViewData.ModelState["DependentId"]?.Errors[0].ErrorMessage</span>
	}
	<input type="hidden" name="TopicId" value="@ViewBag.TopicId" />
	<input type="submit" class="btn btn-success"> </>
</form>