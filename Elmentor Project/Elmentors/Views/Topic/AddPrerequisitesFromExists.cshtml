@{
    ViewData["Title"] = "AddPrerequisitesFromExists";
    SelectList pre = new SelectList(ViewBag.alltopics, "Id", "Name");
    // (List of items that will appear in select option, item.Id will be sent as value to controller, item.Name => will view to user)
}

<a asp-action="ViewPrerequisites" asp-route-Id="@ViewBag.TopicId" class="btn btn-success">Go Back to Prerequisites</a>
<h1>Add Prerequisites From Exists</h1>

<form asp-action="SavePrerequisitesFromExists" method="Post">
    <label class="form-label">Select a Prerequisite Topic</label>

    <select asp-items="pre" name="PrerequisiteId" class="form form-control">
        <option value="0"> ---select Prerequisite---</option>
    </select>
    @if (ViewData.ModelState["PrerequisiteId"]?.Errors.Count > 0)
    {
        <span class="text-danger">@ViewData.ModelState["PrerequisiteId"].Errors[0].ErrorMessage</span>
    }
    <input type="hidden" name="TopicId" value="@ViewBag.TopicId" />
    <button type="submit" class="btn btn-success">Add Prerequisite</button>
</form>

